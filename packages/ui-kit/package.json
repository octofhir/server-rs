{
  "name": "@octofhir/ui-kit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#/*": "./src/*"
  },
  "scripts": {
    "lint": "oxlint src",
    "format": "oxlint --fix src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mantine/core": "^8.3.15",
    "@mantine/hooks": "^8.3.15",
    "@mantine/notifications": "^8.3.15",
    "@mantine/modals": "^8.3.15",
    "@tabler/icons-react": "^3.37.1"
  },
  "devDependencies": {
    "typescript": "~5.9.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "oxlint": "latest"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  }
}